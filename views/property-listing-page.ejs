<%# getting header content from /partials/header.ejs %>
<%- include("./partials/header.ejs", {pageTitle: `Property Listing Page`}) %>

<div class="property-listing-page">
  <div class="row main-content">
    <div class="col-md-4 page-title-column">
      Properties in
      <div class="location-name">Manchester</div>
    </div>
    <div class="col-md-8 property-cards-column">
      <div class="property-list-card">
        <div class="property-image">
          <img src="/assets/mockups/property-image.jpg" alt="" />
        </div>
        <div class="property-primary-details">
          <div class="rent-details-row">
            <div class="rental-details">
              <div class="rent-amount">GBP 2245</div>
              <div class="rent-summary">2 bedroom flat to rent</div>
              <div class="room-layout">2 Beds 2 Baths 1 Lounge</div>
            </div>
            <div class="agent-image">
              <img src="/assets/mockups/agent-logo.jpg" alt="" />
            </div>
          </div>
          <div class="location-details-row">Dickenson Road, Manchester M14</div>
        </div>
        <div class="property-secondary-details">
          <div class="listing-date">Listed on 21 Nov 2021</div>
          <div class="availability-date">Available on 21 Nov 2021</div>
          <div class="agent-contact-number">Phone: 2455 885 125</div>
          <div class="wishlist-property">Wishlist</div>
        </div>
      </div>
      <% for( let i = 0; i < propertiesArray.length; i++ ) { %>
        <% const {monthly: rentMonthly} = propertiesArray[i].rent; %>
        <% const {bedrooms, bathrooms, kitchen} = propertiesArray[i].layout; %>
        <% const {area, city, postcode} = propertiesArray[i].location; %>
        <div class="property-list-card">
          <div class="property-image">
            <img src="/assets/mockups/property-image.jpg" alt="" />
          </div>
          <div class="property-primary-details">
            <div class="rent-details-row">
              <div class="rental-details">
                <div class="rent-amount">GBP <%= rentMonthly %> </div>
                <div class="rent-summary"><%= bedrooms %> bedroom flat to rent</div>
                <div class="room-layout"><%= bedrooms %>  Beds <%= bathrooms %>  Baths <%= kitchen %>  Kitchen</div>
              </div>
              <div class="agent-image">
                <img src="/assets/mockups/agent-logo.jpg" alt="" />
              </div>
            </div>
            <div class="location-details-row"><%= area %>, <%= city %>  <%= postcode %> </div>
          </div>
          <div class="property-secondary-details">
            <div class="listing-date">Listed on 21 Nov 2021</div>
            <div class="availability-date">Available on 21 Nov 2021</div>
            <div class="agent-contact-number">Phone: 2455 885 125</div>
            <div class="wishlist-property">Wishlist</div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <div class="row secondary-content-row text-center">
    <div class="col-md-12">
